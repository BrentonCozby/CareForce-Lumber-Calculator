{
    "name": "CareForce-Lumber-Calculator",
    "version": "1.0.0",
    "description": "Optimizes lumber orders and provides cut lists for various City Year Care Force schematics.",
    "main": "server.js",
    "repository": "https://github.com/BrentonCozby/CareForce-Lumber-Calculator.git",
    "author": "Brenton Cozby -- brenton.cozby@gmail.com",
    "license": "MIT",
    "scripts": {
        "start": "babel-node server.js",
        "dev": "nodemon server.js -e js,css,pug --exec babel-node",
        "build": "npm run build-js && npm run build-css",
        "watch": "npm run watch-js & npm run watch-css",
        "build-js": "webpack",
        "watch-js": "webpack -w",
        "build-js-min": "webpack -p",
        "sass": "node-sass ./public/css/scss/main.scss -o ./public/css/",
        "autoprefixer": "postcss --use autoprefixer ./public/css/main.css",
        "build-css": "npm run sass && npm run autoprefixer",
        "watch-css": "node-sass --watch --recursive ./public/css/scss/ -o ./public/css/",
        "cleancss": "cleancss -o ./public/css/main.css ./public/css/main.css ",
        "build-css-min": "npm run sass && npm run autoprefixer && npm run cleancss",
        "prod": "npm run build-js-min && npm run build-css-min"
    },
    "dependencies": {
        "cheerio": "^1.0.0-rc.2",
        "dotenv": "^4.0.0",
        "express": "^4.15.3",
        "morgan": "^1.8.2",
        "pug": "^2.0.0-rc.3",
        "request": "^2.81.0",
        "request-promise": "^4.2.1",
        "serve-favicon": "^2.4.3"
    },
    "devDependencies": {
        "autoprefixer": "^6.6.1",
        "babel-cli": "^6.24.1",
        "babel-core": "^6.25.0",
        "babel-loader": "^7.1.1",
        "babel-preset-env": "^1.6.0",
        "babel-preset-es2015": "^6.22.0",
        "babel-preset-stage-0": "^6.24.1",
        "clean-css": "^3.4.24",
        "file-loader": "^0.11.2",
        "node-sass": "^4.5.2",
        "nodemon": "^1.11.0",
        "postcss-cli": "^2.6.0",
        "webpack": "^3.4.1"
    }
}
